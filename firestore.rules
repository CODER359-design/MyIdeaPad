rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Функція для перевірки, чи користувач залогінений
    function isAuthenticated() {
      return request.auth != null;
    }
    // Функція для перевірки, чи збігається userId документа з UID запитувача
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Правила для колекції notes
    match /notes/{noteId} {
      // Читання: тільки свої нотатки
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      // Створення: тільки зі своїм userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Оновлення та видалення: тільки свої нотатки
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
  }
}
